<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!-- Style Sheets -->
    <link rel="stylesheet" href="~/css/site1.css" />
    <link rel="stylesheet" href="~/css/boxes.css" />
    <link rel="stylesheet" href="~/css/site1.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <!-- Google Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
    @RenderSection("head", required: false)
</head>

<body>


    <div class="header">
        <div class="container">
            <div class="col col67 logo">
                <p><img src="~/images/whistle.png" />Erhan Sports<span>Futbol Burada!</span></p>
            </div>
            <div class="col col33">
                ...
            </div>
            <br class="clearFix" />
            <div class="nav">
                <ul>
                    <li class="selected"><a href="/">Latest Match</a></li>
                    <li><a href="/">All Match Reports</a></li>
                    <li><a href="/">All Teams</a></li>
                    <li><a href="/">League Tables</a></li>
                    <li><a href="/admin">Admin</a></li>

                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </div>
    <div class="container">
        <div>
            <div id="carousel" class="carousel slide">
            <ol class="carousel-indicators">
                <li data-target="#carousel" data-slide-to="0" class="active"></li>
                <li data-target="#carousel" data-slide-to="1" ></li>
                <li data-target="#carousel" data-slide-to="2" ></li>
            </ol>
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/images/background.jpg" />
                    <div class="container">
                        <div class="carousel-caption">
                            <h1>This is Image 1</h1>
                        </div>
                    </div>
                </div>
                <div class="item">
                    <img src="~/images/stadium.jpg" />
                    <div class="container">
                        <div class="carousel-caption">
                            <h1>This is Image 2</h1>
                        </div>
                    </div>
                </div>
                <div class="item">
                    <img src="~/images/stadiumbackground.jpg" />
                    <div class="container">
                        <div class="carousel-caption">
                            <h1>This is Image 3</h1>
                        </div>
                    </div>
                </div>
            </div>
            <a href="carousel" class="left carousel-control" data-slide="prev">
                <span class="icon prev"></span>
            </a>
            <a href="carousel" class="right carousel-control" data-slide="next">
                <span class="icon next"></span>
            </a>
            <script>
                $("#carousel").carousel(
                    {
                        interval: 2000
                    });
            </script>
            </div>
            <div class="pagecontent">
                @RenderBody()
            </div>
        </div>
    <div class="footer">
        <div class="container">

        </div>
    </div>
        </div>
    @RenderSection("Scripts", required: false)
</body>
</html>