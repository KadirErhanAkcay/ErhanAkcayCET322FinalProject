    ViewData["Title"] = "Create";
    Layout = "~/Views/_admin.cshtml";
}
@section head{
    <style type="text/css">
        body {
            background-image: url(../images/stadiumbackground.jpg);
            margin: 0;
        }
    </style>
}

<h2>Create</h2>

<h4>MatchReports</h4>
<hr />
<h6>
<div class="row">
    <div class="container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MatchId" class="control-label"></label>
                <input asp-for="MatchId" class="form-control" />
